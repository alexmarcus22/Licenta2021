<div>
	<div class="d-flex align-items-center justify-content-center h-100 w-30" autocomplete="new-password">
		<form action="" method="POST" class="form-component" novalidate id="registerForm">
			<div class="form-group">
				<h2 class="title">
					Let's sign you up.
				</h2>
				<h3 class="subtitle">
					Join our team!
				</h3>
				<form>
					<div class="form-group">
						<label for="firstName">First Name</label>
						<input type="text" class="form-control" id="firstName" name="firstName" placeholder="First Name"
							data-rule-minlength="2" data-rule-maxlength="15" data-msg-minlength="At least two chars">
					</div>
					<div class="form-group">
						<label for="lastName">Last Name</label>
						<input type="text" class="form-control" id="lastName" name="lastName" placeholder="Last Name"
							data-rule-minlength="2" data-rule-maxlength="15" data-msg-minlength="At least two chars">
					</div>
					<div class="form-group">
						<label for="emailAccount">Email address</label>
						<input type="email" class="form-control" id="emailAccount" name="emailAccount" placeholder="Email"
							data-msg-email="Enter a valid email address." >
					</div>
					<div class="form-group">
						<label for="passwordRegister">Password</label>
						<i class="fas fa-eye input-icon"></i>
						<input type="password" class="form-control" id="passwordRegister" placeholder="Password"
							name="passwordRegister" autocomplete="new-password">
					</div>
					<div class="form-group">
						<label for="confirmPasswordRegister">Confirm Password</label>
						<i class="fas fa-eye input-icon"></i>
						<input type="password" class="form-control" id="confirmPasswordRegister" placeholder="Confirm Password"
							name="confirmPasswordRegister" autocomplete="new-password" data-msg-confirmPasswordRegister="adsa">
					</div>
					<span class="informative">Already have an account? <a href="./login">Login</a></span>
					<button type="submit" class="btn btn-primary">Sign In</button>
				</form>
			</div>
		</form>
	</div>
</div>